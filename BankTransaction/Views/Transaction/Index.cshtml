@model IEnumerable<BankTransaction.Models.Transaction>

@{
    ViewData["Title"] = "Index";
    Layout = "";
}

<h1>Passbook</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeneficiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>  <a asp-action="AddOrEdit" class="btn btn-sm btn-success">Create New</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeneficiaryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.TransactionId"class="btn btn-warning">
                    <i class="fa-solid fa-pen-to-square"></i>
                    </a> 
                    <form asp-action="Delete" asp-route-id="@item.TransactionId">
                        <button type="submit" class="btn btn-danger">
                            <i class="far fa-trash-alt"></i>
                        </button>
                    </form>
               
            </td>
        </tr>
}
    </tbody>
</table>
